<script>
              document.addEventListener("DOMContentLoaded", function() {
  // Fetch the dynamic rating from data attribute
  const ratingElement = document.querySelector('.review-banner .stars');
  const rating = parseFloat(ratingElement.getAttribute('aria-label').match(/Rating of ([\d.]+) out of 5 stars/)[1]);

  const starsPercentage = (rating / 5) * 100; // Convert to percentage
  const starsPercentageRounded = `${Math.round(starsPercentage)}%`;
  
  document.querySelector('.full-stars').style.width = starsPercentageRounded;
});



            </script>
            <style>
            
            .review-banner {
                font-family: Arial, sans-serif;
                line-height: 1;
                color: #333;
                display: flex;
                align-items: center;
            }
            
            .stars {
                display: inline-block;
                font-size: 16px;
                position: relative;
                color: #ccc; /* Grey color for the empty stars */
            }
            
            .full-stars {
                display: inline-block;
                position: absolute;
                top: 0;
                left: 0;
                white-space: nowrap;
                overflow: hidden;
                color: gold; /* Gold color for the full stars */
                width: 0; /* Initial width is 0, will be set by JS */
            }
            
            .score {
                margin-left: 5px;
                font-weight: bold;
            }
            
            .review-count {
                font-weight: normal;
            }
            
            </style>
           