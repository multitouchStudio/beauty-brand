

<style>
  .stars-outer {
    display: inline-block;
    position: relative;
    unicode-bidi: bidi-override;
    font-size: 25px; /* Size of the stars */
    line-height: 1;
    width: 125px; /* Total width - adjust if changing font size */
    color: #ccc; /* Color of empty stars (gray) */
  }

  .stars-inner {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    overflow: hidden;
    color: gold; /* Color of filled stars (gold) */
  }

  .stars-outer::before {
    content: "★★★★★"; /* Five empty stars using Unicode characters */
    display: block;
  }

  .score {
    margin-left: 5px;
    font-weight: bold;
  }

  .review-count, .review-text {
    font-weight: normal;
  }
</style>


<script>
document.addEventListener('DOMContentLoaded', function() {
  {% for block in section.blocks %}
    const rating = {{ block.settings.reviews }};
    const starTotal = 5;
    const starPercentage = (rating / starTotal) * 100;
    const starPercentageRounded = `${Math.round(starPercentage * 10) / 10}%`; // More precise rounding
    document.querySelector(`#reviews-{{ block.id }} .stars-inner`).style.width = starPercentageRounded;
  {% endfor %}
});
</script>

