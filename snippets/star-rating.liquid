

<style>
  .stars-outer::before {
    content: "\f006 \f006 \f006 \f006 \f006";
  }

  .star-outer {
    display: inline-block;
    position: relative;
    font-family: FontAwesome;
  }

        .full-stars {
        display: inline-block;
        position: absolute;
        top: 0;
        left: 0;
        white-space: nowrap;
        overflow: hidden;
        color: gold; /* Gold color for the full stars */
        }

        .score {
        margin-left: 5px;
        font-weight: bold;
        }

        .review-count, .review-text {
        font-weight: normal;
        }

  </style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  {% for block in section.blocks %}
    const ratings{{ block.id }} = {{ block.settings.reviews }};
    const starTotal{{ block.id }} = 5;
    const starPercentage{{ block.id }} = (ratings{{ block.id }} / starTotal{{ block.id }}) * 100;
    const starPercentageRounded{{ block.id }} = `${(Math.round(starPercentage{{ block.id }}/10) * 10)}%`;
    document.querySelector(`#reviews-{{ block.id }} .stars-inner`).style.width = starPercentageRounded{{ block.id }};
  {% endfor %}
});
</script>