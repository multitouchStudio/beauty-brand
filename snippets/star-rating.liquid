

<style>
  .stars-outer::before {
    content: "\f006 \f006 \f006 \f006 \f006";
  }

  .stars-outer {
  display: inline-block;
  position: relative;
  unicode-bidi: bidi-override;
  font-size: 25px; /* Adjust size as needed */
  line-height: 1;
  color: #ccc; /* Color of empty stars */
}

.stars-inner {
  position: absolute;
  top: 0;
  left: 0;
  white-space: nowrap;
  overflow: hidden;
  color: gold; /* Color of filled stars */
}

.stars-outer::before {
  content: "★★★★★"; /* Five empty stars */
  display: block;
}       

.stars-inner::before {
  content: "★★★★★"; /* Five empty stars */
  display: block;
}
  
.score {
        margin-left: 5px;
        font-weight: bold;
        }

        .review-count, .review-text {
        font-weight: normal;
        }

  </style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  {% for block in section.blocks %}
    const rating{{ block.id }} = {{ block.settings.reviews }};
    const starTotal = 5;
    const starPercentage = (rating{{ block.id }} / starTotal) * 100;
    const starPercentageRounded = `${Math.round(starPercentage / 10) * 10}%`;
    document.querySelector(`#reviews-{{ block.id }} .stars-inner`).style.width = starPercentageRounded;
  {% endfor %}
});
</script>
