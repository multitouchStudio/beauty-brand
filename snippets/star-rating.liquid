<script>
document.addEventListener("DOMContentLoaded", function() {
  const ratingElement = document.querySelector('.review-banner .stars');
  if (ratingElement) {
    const rating = parseFloat(ratingElement.getAttribute('aria-label').match(/Rating of ([\d.]+) out of 5 stars/)[1]);
    const starsPercentage = (rating / 5) * 100;
    document.querySelector('.review-banner .full-stars').style.width = `${starsPercentage}%`;
  } else {
    console.error('Rating element not found');
  }
});


            </script>
            <style>
            
            .review-banner {
    font-family: Arial, sans-serif;
    line-height: 1;
    color: #333;
    display: flex;
    align-items: center;
}

.stars {
    display: inline-block;
    font-size: 16px;
    position: relative;
}

.base-stars {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    color: #ccc; /* Grey color for the base stars */
}

.full-stars {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    overflow: hidden;
    color: gold; /* Gold color for the full stars */
    width: 0; /* Initial width is 0, will be set by JS */
}

.score, .review-text {
    margin-left: 5px;
    font-weight: bold;
}


            </style>
           