    display: inline-block;
    font-size: 16px;
    position: relative;
    color: #ccc; /* Grey color for the empty stars */
}

.base-stars {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    color: #ccc; /* Grey color for the base stars */
}

.full-stars {
    position: absolute;
