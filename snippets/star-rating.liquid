



<style>
  .stars-outer::before {
    content: "\f006 \f006 \f006 \f006 \f006";
  }

  .star-outer {
    display: inline-block;
    position: relative;
    font-family: fontAwesome;
  }

        .full-stars {
        display: inline-block;
        position: absolute;
        top: 0;
        left: 0;
        white-space: nowrap;
        overflow: hidden;
        color: gold; /* Gold color for the full stars */
        }

        .score {
        margin-left: 5px;
        font-weight: bold;
        }

        .review-count, .review-text {
        font-weight: normal;
        }

  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function(){
      const ratings{{id}} = {{ratingValue}};
      const starTotal{{id}} = 5;
      const starPercentage{{id}} = (ratings{{id}} / starTotal{{id}}) * 100;
      const starPercentageRounded{{id}} = `${(Math.round(starPercentage{{id}}/10) *1 0)}%`
      document.querySelector(`#reviews-{{id}} .stars-inner`).style.width = starPercentageRounded{{id}};
    })
  </script>