<script>
document.addEventListener("DOMContentLoaded", function() {
    const ratingElement = document.querySelector('.review-banner .stars');
    if (ratingElement) {
        const rating = parseFloat(ratingElement.getAttribute('aria-label').match(/Rating of ([\d.]+) out of 5 stars/)[1]);
        const starsPercentage = (rating / 5) * 100;
        const fullStarsDiv = document.querySelector('.review-banner .full-stars');
        if (fullStarsDiv) {
            fullStarsDiv.style.width = `${starsPercentage}%`;
        } else {
            console.error('Full stars div not found');
        }
    } else {
        console.error('Rating element not found');
    }
});



            </script>
            <style>
            
